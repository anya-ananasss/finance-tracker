<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.ylabHomework.controllers.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>org.ylabHomework.controllers.filters.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>UserViolationsFilter</filter-name>
        <filter-class>org.ylabHomework.controllers.filters.UserViolationsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserViolationsFilter</filter-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/registration</url-pattern>
        <url-pattern>/update_account</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>TransactionViolationsFilter</filter-name>
        <filter-class>org.ylabHomework.controllers.filters.TransactionViolationsFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TransactionViolationsFilter</filter-name>
        <url-pattern>/create_transaction</url-pattern>
    </filter-mapping>
</web-app>
